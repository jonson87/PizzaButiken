@model List<Dish>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2>Pizzas</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Ingredients</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dish in Model)
            {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Price :-</td>
                    <td>@foreach (var ing in dish.DishIngredients)
                    {
                        @ing.Ingredient.Name<br/>
                    }
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
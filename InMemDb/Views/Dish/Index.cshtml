
@model List<Dish>

@{
    ViewData["Title"] = "Dish";
}

<div class="container">
    <h2>Pizzas</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dish in Model)
            {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Price</td>
                </tr>
                
            }
        </tbody>
    </table>
</div>

